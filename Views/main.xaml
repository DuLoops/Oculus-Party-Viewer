             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Test.Views"
             mc:Ignorable="d" Height="900" Width="1600">
    
    <Grid Background="#cec2ae">
        <ToolBarTray DockPanel.Dock="Top" Background="#264c5e" VerticalAlignment="Top" >
            <ToolBar Margin="10">
                <Button Content="Save" FontSize="30" Margin="0,0,5, 0" BorderBrush="Gray" Padding="5"/>
                <Button Content="Parties" FontSize="30"  BorderBrush="Gray" Padding="5" />
            </ToolBar>
        </ToolBarTray>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
            <StackPanel Name="mainPlayerPanel" Orientation="Horizontal" Margin="10,53,10,10" >

            </StackPanel>
        </ScrollViewer>

    </Grid>
    
</UserControl>
